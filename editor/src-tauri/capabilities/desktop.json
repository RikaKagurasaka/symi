{
  "identifier": "desktop-capability",
  "platforms": [
    "macOS",
    "windows",
    "linux"
  ],
  "windows": [
    "main"
  ],
  "permissions": [
    "window-state:default",
    "opener:default",
    {
      "identifier": "opener:allow-open-url",
      "allow": [
        {
          "url": "https://*.rika.link/*"
        },
        {
          "url": "https://github.com/*"
        },
        {
          "url": "https://discord.gg/*"
        }
      ]
    }
  ]
}